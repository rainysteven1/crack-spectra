{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "go@1.24.1",
    "skaffold@2.13.2",
    "ruff@0.9.3",
    "golangci-lint@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!'"
    ],
    "scripts": {
      "lint-go": [
        "cd backend && golangci-lint run"
      ],
      "lint-py": [
        "ruff check --fix --show-fixes --exclude lib"
      ],
      "build": [
        "skaffold build"
      ]
    }
  }
}